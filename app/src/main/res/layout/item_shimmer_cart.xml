<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/shimmer_background_color">

    <View
        android:id="@+id/shimmer_cart_item_checkbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:background="@color/shimmer_content_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/shimmer_cart_item_product_name"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:background="@color/shimmer_content_color"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@id/shimmer_cart_item_checkbox"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/shimmer_item_product_image"
        android:layout_width="136dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"
        android:background="@color/shimmer_content_color"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/shimmer_cart_item_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_cart_item_product_name" />

    <ImageView
        android:id="@+id/shimmer_btn_quantity"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:background="@color/shimmer_content_color"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/shimmer_cart_item_price"
        app:layout_constraintEnd_toEndOf="@id/shimmer_cart_item_price" />

    <TextView
        android:id="@+id/shimmer_cart_item_price"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:background="@color/shimmer_content_color"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_item_product_image"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
